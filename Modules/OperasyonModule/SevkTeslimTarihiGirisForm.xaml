<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mnd.UI.Modules.OperasyonModule"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="mnd.UI.Modules.OperasyonModule.SevkTeslimTarihiGirisForm"
        mc:Ignorable="d"
    FontSize="14"
        Title="Sevk Teslim Tarihi Giriş" Height="158.465" Width="305.305">
    <Grid>
        <StackPanel>
            <StackPanel HorizontalAlignment="Center" Margin="10">
                <Label FontWeight="Bold" Content="Teslim Tarihi"/>
                <dxe:DateEdit EditValue="{Binding TeslimTarihi}" 
                              HorizontalAlignment="Left"  Width="200"/>
            </StackPanel>



            <DockPanel Margin="10,10,0,0" HorizontalAlignment="Right" >
                <Button Margin="4" Click="Button_Click_1">İptal</Button>
                <Button Margin="4" Click="Button_Click">Tamam</Button>
            </DockPanel>
        </StackPanel>

    </Grid>
</Window>
